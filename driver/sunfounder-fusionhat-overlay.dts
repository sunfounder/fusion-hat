/dts-v1/;
/plugin/;

/ {
	compatible = "brcm,bcm2835";

    fragment@0 {
        target = <&i2c1>;
        __overlay__ {
            #address-cells = <1>;
            #size-cells = <0>;

            fusion_hat: fusion_hat@17 {
                compatible = "sunfounder,fusion_hat";
                reg = <0x17>;
                status = "okay";
            };
        };
    };
	fragment@1 {
		target-path = "/chosen";
		__overlay__ {
			power: power {
				hat_current_supply = <5000>;
			};
		};
	};
	fragment@2 {
		target = <&i2c1>;
		__overlay__ {
			status = "okay";
		};
	};
	fragment@3 {
		target = <&spi0>;
		__overlay__ {
			status = "okay";
		};
	};

};
